{
  "compilerOptions": {
    /* Base Options from @tsconfig/recommended */
    "target": "ESNext", // Compile to modern JavaScript; let bundler handle downleveling
    "module": "ESNext", // Use modern ES modules
    "lib": ["ESNext", "DOM", "DOM.Iterable"], // Include necessary libraries
    "skipLibCheck": true, // Skip type checking of declaration files (speeds up compilation)

    /* Modules */
    "moduleResolution": "bundler", // Aligns with modern bundlers like Vite/Rollup
    "resolveJsonModule": true, // Allow importing JSON files
    "allowImportingTsExtensions": true, // Allows importing .ts files with extensions (good for Vite/NodeNext)
    "isolatedModules": true, // Ensures each file can be transpiled independently (required by some tools like Vite)
    "esModuleInterop": true, // Enables compatibility with CommonJS modules

    /* Type Checking */
    "strict": true, // Enable all strict type-checking options
    // "noImplicitAny": true, // (Included in strict)
    // "strictNullChecks": true, // (Included in strict)
    // "strictFunctionTypes": true, // (Included in strict)
    // "strictBindCallApply": true, // (Included in strict)
    // "strictPropertyInitialization": true, // (Included in strict)
    // "noImplicitThis": true, // (Included in strict)
    // "alwaysStrict": true, // (Included in strict)
    "noUnusedLocals": true, // Report errors on unused local variables
    "noUnusedParameters": true, // Report errors on unused parameters
    "noFallthroughCasesInSwitch": true, // Report errors for fallthrough cases in switch statement
    "noImplicitReturns": true, // Report error when not all code paths in function return a value.

    /* Emit */
    "declaration": true, // Generate .d.ts files
    "declarationMap": true, // Generate sourcemaps for .d.ts files
    "sourceMap": true, // Generate .map files for debugging
    "outDir": "dist", // Output directory for compiled files (primarily for types if bundler handles JS)
    "removeComments": false, // Keep comments in JS output (can be stripped by bundler)
    "noEmit": true, // Let Vite (or your bundler) handle the JS emit. TSC only emits type declarations.

    /* Project Structure */
    "rootDir": "src", // Specify the root directory of input files
    "baseUrl": ".", // Base directory to resolve non-absolute module names
    "paths": {
      // Optional: For aliasing paths
      "@/*": ["src/*"]
    },

    /* Interop Constraints */
    "forceConsistentCasingInFileNames": true // Disallow inconsistently-cased references to the same file.
  },
  "include": ["src/**/*.ts", "index.ts"], // Files to include in compilation
  "exclude": [
    "node_modules",
    "dist",
    "dev",
    "test",
    "**/*.spec.ts",
    "**/*.test.ts",
    "vite.config.ts"
  ] // Files to exclude
}
